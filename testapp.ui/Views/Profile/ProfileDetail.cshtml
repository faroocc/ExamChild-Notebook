@model testapp.ui.Models.UserRegistationModel
@{
  ViewData["Title"] = "Puan";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
<h1>Profil Düzenleme Sayfası</h1>
<form class="mt-2" method="post" enctype="multipart/form-data">
        @Html.Label("Adınız")
        <input type="text" asp-for="Name" class="form-control"/>
        <br/>
        @Html.Label("Soyadınız")
        <input type="text" asp-for="SurName" class="form-control"/>
        <br/>
        @Html.Label("Mail Adresiniz")
        <input type="text" asp-for="Mail" class="form-control"/>
        <br/>
        
        @Html.Label("Telefon Numarası")
        <input type="text" asp-for="phonenumber" class="form-control"/>
        <br/>
        <br/>
        <div class="form-group">
             <label>Resim seçin</label>
             <input type="file" asp-for="Image">   
        </div>
        <button class="btn btn-info">Bilgileri Güncelle</button>       
</form>
</div>