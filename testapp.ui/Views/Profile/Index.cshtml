@using testapp.entity.Concrete
@model List<KpssResult>
@{
  ViewData["Title"] = "Puan";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container text-center justify-content-center">
<h1 class="text-dark">Puanlarım</h1>
<hr/>
@if(@Model.Count <= 0)
{
  <h1 class="text-danger">Hiç kayıt yapmadınız</h1>
  
  <div class="container mt-4">
  <a href="/puanhesapla/index" class=""><i class="fa-solid fa-lg fa-arrow-right btn btn-info"></i></a>
  </div>
}else{

<table class="table table-striped d-inline table-inverse table-responsive">
  <thead class="thead-inverse bg-dark ">
    <tr class="text-white">
      <th></th>
      <th><h5>Genel Yetenek Net</h5></th>
      <th><h5>Genel Kültür Net</h5></th>
      <th><h5>Puan</h5></th>
      <th><h5></h5></th>
      <th></th>
    </tr>
    </thead>
    <tbody class="text-dark text-capitalize lead text-center" style="font-weight: 600;">
        @foreach (var item in Model)
        {
      <tr>
        <td></td>
        <td>@item.ResultGY</td>        
        <td>@item.ResultGK</td>        
        <td class="text-success text-bold">@item.ResultPoint</td>
        <form asp-controller="PuanHesapla" asp-action="DeletePoint" method="post">
          <input type="hidden" name="kpssResultId" value="@item.KpssResultId">
          <th><button href="" type="submit" class="btn btn-sm btn-danger">Sil</button> </th>
        </form> 
        <td></td>       
      </tr>
        }
     
    </tbody>
</table>
}
</div>
